generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pricing {
  id                Int      @id @default(autoincrement())
  country           String
  city              String   @db.VarChar(255)
  vehicleType       String
  amountAirportFees Float
  amountPerHour     Float
  amountPerKm       Float
  baseAmount        Float
  baseKm            Float
  cityFlag          Boolean
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
